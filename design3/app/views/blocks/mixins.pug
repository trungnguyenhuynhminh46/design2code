mixin blockHeader(sub_title, main_title, content)
	.block-header
		.block-header__sub-title= sub_title
		.block-header__main-title= main_title
		if content
			.block-header__content=content
mixin speachItem(img_path= "./images/img-quote.png", content= "“Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation.”", author= "Jon Doe", icon= "true")
	.speech__item
		if icon == "true"
			.speech__icon
				img(src= img_path, alt="")
		else
			.speech__image
				img(src= img_path, alt="")
		.speech__main
			.speech__content= content
			.speech__author= author
mixin whoweareItem(img_path, name, job, facebook="#", twitter="#", pinterest="#", instagram="#")
	.whoweare__item
		.whoweare__main 
			img(src= img_path, alt="Ảnh thành viên")
			.whoweare__content
				ul.whoweare-social
					li.whoweare-social__item.facebook
						a(href= facebook).whoweare-social__link
							i(class="fa-brands fa-facebook-f")
					li.whoweare-social__item.twitter
						a(href= twitter).whoweare-social__link
							i(class="fa-brands fa-twitter")
					li.whoweare-social__item.pinterest
						a(href= pinterest).whoweare-social__link
							i(class="fa-brands fa-pinterest-p")
					li.whoweare-social__item.instagram
						a(href= instagram).whoweare-social__link
							i(class="fa-brands fa-instagram")
		.whoweare-info
			h1.whoweare-info__name= name
			h2.whoweare-info__job= job
mixin aboutItem(img_path="./images/img-about1.png", icon_class="fa-solid fa-people-group", name="Super team")
	.about__item
		img(src= img_path, alt="Hình ảnh").about__image
		.about__content
			i(class= icon_class)
			span= name
mixin workItem(image_path= "./images/img-work1.png", icon_path= "./images/img-work-icon.png", header="Creative header", text= "Lorem ipsum dolor sit amet consectetur.")
	.work-image__item
		img(src= image_path, alt="")
		.work-image__content
			img(src= icon_path, alt="").work-image__icon
			.work-image__header= header
			.work-image__text= text
mixin peoplesayComment(img_path="./images/img-people1.png", name="Name", job="Job", text="Text")
	.peoplesay__comment
		img(src= img_path, alt="")
		.peoplesay__content
