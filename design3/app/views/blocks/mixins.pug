mixin blogInteractGroup(icon_class="fa-solid fa-eye", num=1)
	.group
		i(class= icon_class)
		span.num= num
mixin blogItem(img_path="./images/img-blog1.png", title="Lorem ipsum dolor sit amet", text="Lorem ipsum dolor sit amet consectetur, adipisicing elit. Praesentium soluta saepe, ipsa deserunt quo neque.", day=15, month='jan')
	.blog__item
		.blog__thumb
			img(src= img_path, alt="")
			.blog__date
				span.day= day
				span.month= month
		.blog__content
			.blog__title= title
			.blog__text= text
		.blog__interact
			if block
				block
mixin socialItem(link="#link", icon_class="fa-brands fa-facebook-f")
	a.socials__item(href= link)
		i(class= icon_class)
mixin footerSection1(header="Header", content="content", num=15000)
	.section.section1
		h1.section1__header #{header}
		.section1__content #{content}
		.section1__followers
			if num < 1000
				span.num #{num}
				span followers
			else
				span.num #{num/1000}k 
				span followers
		.socials
			span.text Follow Us:
			.socials__list
				if block
					block
		.form
			input(type="text", name="", placeholder="Your Email...").form__input
			button.form__button Subscribe
